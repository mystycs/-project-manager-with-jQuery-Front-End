<h2>Project: <%= @project.title %></h2>
<% if current_user.present? && current_user.id == @project.user_id %>
  <%= link_to 'Delete Project', project_path(@project.id), :method => :delete %>
<% end %>
<h3>Description: <%= @project.description %></h3>
Posted By: <%= @user %><br><br>
<h4>Tasks:</h4>
<% @tasks.each_with_index do |task, index| %>
  <%= index+1 %>: <%= task.task %> <% if current_user.present? %> -
    <% if task.completed != true %>
      <%= link_to "Mark Completed", {:controller => "tasks", :action => "completed", :id => task.id, :project_id => @project.id} %>
    <% else %>
      <b>Completed</b>
    <% end %>
  <% end %>
  <br><br>
<% end %>

<% if current_user.present? %>
<h4> Add a Task: </h4>
<%= render partial: 'tasks/form', locals: { task: @task } %>
<% end %>

<hr>
<h4>Comments:</h4></br>
<% @comments.each_with_index do |comment, index| %>
  <%= index+1 %>: <%= comment.comment %> - <%= comment.get_name_from_user_id(comment.user_id) %>

  <%if current_user.present? && current_user.id == comment.user_id %>
  <%= link_to 'Delete', comment_path(comment.id, :project_id => @project.id), :method => :delete %>
  <% end %>

<br><br>
<% end %>
<% if current_user.present? %>

<h4>Add a Comment:</h4>
<%= render partial: 'comments/form', locals: { comment: @comment } %>
<% end %>
