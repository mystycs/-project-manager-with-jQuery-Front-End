<% content_for :javascript_includes do %>
  <%= javascript_include_tag "projects.js" %>
<% end %>
<div id="project-content">
</div>
<% if current_user.present? && current_user.id == @project.user_id %>
  <%=   link_to 'Delete Project', '#', :onclick => 'deleteProject()' %>
<% end %></br></br>

<h4>Tasks:</h4>

<div id="showTasks">
</div><br>

<% if current_user.present? %>
<h4> Add a Task: </h4>

<input name="task" id="task" type="text" />
<input name="buttonExecute" onclick="submitTask(document.getElementById('task').value, <%= @category.id %>, <%= @project.id %>)" type="button" value="Create Task" />

<% end %>

<hr>
<h4>Comments:</h4>

<div id="showComments">
</div><br>

<% if current_user.present? %>

<h4>Add a Comment:</h4>
<%= render partial: 'comments/form', locals: { comment: @comment } %>
<% end %>
